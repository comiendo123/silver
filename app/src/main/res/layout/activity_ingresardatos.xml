<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".superusuario.ingresardatos.ingresardatos">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="729dp"

        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <Space
            android:layout_width="match_parent"
            android:layout_height="27dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SELECCIONES DIA"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/editfecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textAlignment="center"
            android:inputType="textPersonName"

            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            />

        <Space
            android:layout_width="match_parent"
            android:layout_height="37dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="ULTIMO DIA ingresado"
            android:textAlignment="center"  />

        <Space
            android:layout_width="match_parent"
            android:layout_height="21dp" />

        <TextView
            android:id="@+id/ultimo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="TextView"
            android:textAlignment="center" />


        <TextView
            android:id="@+id/hora"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Space
                    android:layout_width="50dp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <Space
                        android:layout_width="190dp"
                        android:layout_height="19dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="57dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="CANTIDAD ENTRADA" />

                            <EditText
                                android:id="@+id/edittextcantidad"
                                android:layout_width="156dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="" />

                            <TextView
                                android:id="@+id/textViewd8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tz" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <Space

                        android:layout_width="match_parent"
                        android:layout_height="19dp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="57dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="49dp"
                            android:orientation="horizontal">


                            <TextView
                                android:id="@+id/tedxtView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="LEY" />

                            <EditText
                                android:id="@+id/edittextley"
                                android:layout_width="156dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="textPersonName"
                                android:text="" />

                            <TextView
                                android:id="@+id/textVdiewd8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Tz" />
                        </LinearLayout>


                    </androidx.cardview.widget.CardView>

                    <Space

                        android:layout_width="match_parent"
                        android:layout_height="19dp" />

                    <Button
                        android:id="@+id/registrarproceso"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="INGRESAR" />


                </LinearLayout>

                <Space
                    android:layout_width="50dp"
                    android:layout_height="0dp" />

                <LinearLayout
                    android:layout_width="320dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="320dp"
                        android:layout_height="match_parent">

                        <!--RECYCLERVEW AQUI-->
                        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                            android:id="@+id/swipe"
                            android:layout_width="320dp"
                            android:layout_height="match_parent">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/reciclerultimo"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
                <Space

                    android:layout_width="50dp"
                    android:layout_height="0dp" />
            </LinearLayout>


        </HorizontalScrollView>

    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>